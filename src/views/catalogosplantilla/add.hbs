<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/empresas/catalogosplantilla/add/{{id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre_producto" class="form-control" placeholder="Nombre Producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion_producto" class="form-control" placeholder="Descripcion Producto">
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio" class="form-control" placeholder="Precio">
                        </div>
                        <div class="form-group">
                            <input type="text" name="categoria" class="form-control" placeholder="Categoria">
                        </div>
                        <div class="form-group">
                            <input type="text" name="tipo" class="form-control" placeholder="Tipo">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>