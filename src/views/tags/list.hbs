<div class="container p-4">
    <div class="col-md-2 ">
        <div class="card card-body text-center" style="margin-bottom: 10px">
            <a href="/empresas/comercios/tags/listado/{{id}}">Ver Estilo Listado!</a>
        </div>
    </div>
    <div class="col-md-2 mx-auto">
        <div class="card card-body text-center">
            <a href="/empresas/comercios/tags/add/{{id}}">Crear Tag!</a>
        </div>
    </div>
    <div class="row">        
        {{#each tags}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{descripcion}}
                    </h3>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/empresas/comercios/tags/delete/{{id}}/{{comercio_id}}">
                        Eliminar
                    </a>
                    <a class="btn btn-secondary" href="/empresas/comercios/tags/edit/{{id}}/{{comercio_id}}">
                        Modificar
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>