                        <td>{{id}}</td>
                        <td>{{descripcion}}</td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="2">No hay dato</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>