<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/empresas/comercios/zonasentrega/add/{{id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="codigo_postal" class="form-control" placeholder="Codigo Postal" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio_minimo" class="form-control" placeholder="Precio minimo">
                        </div>
