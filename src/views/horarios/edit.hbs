<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/empresas/comercios/horarios/edit/{{horario.id}}/{{horario.comercio_id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="dia" class="form-control" placeholder="Dia" value="{{horario.dia}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="hora_apertura" class="form-control" placeholder="Hora de Apertura" value="{{horario.hora_apertura}}">
                </div>
                <div class="form-group">
                    <input type="text" name="hora_cierre" class="form-control" placeholder="Hora de Cierre" value="{{horario.hora_cierre}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Grabar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>